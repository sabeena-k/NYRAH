<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NYRAH</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/user/home.css">
</head>

<header>
<nav class="navbar navbar-expand-lg navbar-light py-3 shadow-sm">
  <div class="container">

   
    <a class="navbar-brand fw-bold" href="/">
      NYRAH
    </a>

    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">

     
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-4">
        <li class="nav-item"><a href="/" class="nav-link text-dark">Home</a></li>
        <li class="nav-item"><a href="/newArrivals" class="nav-link text-dark">New Arrivals</a></li>
        <li class="nav-item"><a href="/AllCategories" class="nav-link text-dark">Categories</a></li>
        <li class="nav-item"><a href="/AllProducts" class="nav-link text-dark">All Products</a></li>
      </ul>

   
      <div class="d-flex align-items-center gap-3">

        <% if (!user) { %>
         
          <a href="/signin" class="btn btn-danger">Sign In</a>
          <a href="/signup" class="btn btn-outline-danger">Sign Up</a>

        <% } else { %>

         
              <div class="profile-circle d-flex justify-content-center align-items-center text-white bg-danger rounded-circle"
                style="width:40px; height:40px;">
           <%= user?.name ? user.name.charAt(0).toUpperCase() : "U" %>
        </div>


         
          <div class="search-container position-relative">
  <input type="text" id="searchInput" placeholder="Search products..." class="form-control">
  <div id="searchResults" class="position-absolute bg-white border rounded shadow-sm"></div>
</div>
          <a href="#" class="text-dark"><i class="bi bi-heart fs-5"></i></a>
          <a href="#" class="text-dark"><i class="bi bi-cart fs-5"></i></a>

       
          <a href="/logout" class="btn btn-danger btn-sm text-light">Logout</a>

        <% } %>

      </div>
    </div>
  </div>
</nav>
</header>
<script>
const searchInput = document.getElementById("searchInput");
const searchResults = document.getElementById("searchResults");

function debounce(fn, delay) {
  let timeoutId;
  return function (...args) {
    clearTimeout(timeoutId);
    timeoutId = setTimeout(() => fn.apply(this, args), delay);
  };
}

async function handleSearch() {
  const query = searchInput.value.trim();
  if (!query) {
    searchResults.innerHTML = "";
    searchResults.style.display = "none";
    return;
  }

  const res = await fetch(`/search-products?q=${encodeURIComponent(query)}`);
  const data = await res.json();

  searchResults.innerHTML = data.map(p => `
    <div class="search-item d-flex align-items-center gap-2 p-2">
      <a href="/product/${p._id}" 
         class="text-dark text-decoration-none">
         ${p.productName}
      </a>
    </div>
  `).join("");

  searchResults.style.display = "block";
}

searchInput.addEventListener("input", debounce(handleSearch, 500));
</script>

