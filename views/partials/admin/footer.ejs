<style>

.pagination-custom {
    list-style: none;
    display: flex;
    gap: 8px;
    margin: 20px 0;
    justify-content: center;
}

.pagination-custom .page-item {
    border-radius: 6px;
    overflow: hidden;
    transition: all 0.2s;
}

.pagination-custom .page-link {
    display: block;
    padding: 8px 14px;
    background: #f5f5f5; 
    color: #333;
    text-decoration: none;
    font-weight: 500;
    border: 1px solid #ccc;
    border-radius: 6px;
    transition: all 0.2s;
}

.pagination-custom .page-link:hover {
    background: #333;
    color: #fff;
    border-color: #333;
}

.pagination-custom .active .page-link {
    background: #333;
    color: #fff;
    border-color: #333;
}

.pagination-custom .active .page-link {
    cursor: default;
}
</style>
<% 
  let pageCount = typeof totalPages !== 'undefined' ? totalPages : 1; 
  let current = typeof currentPage !== 'undefined' ? currentPage : 1; 
  let searchQuery = typeof search !== 'undefined' ? search : ''; 
%>

<ul class="pagination-custom">


  <% for(let i = 1; i <= pageCount; i++) { %>
    <li class="page-item <%= i === current ? 'active' : '' %>">
      <a class="page-link" href="?page=<%= i %>&search=<%= searchQuery %>"><%= i %></a>
    </li>
  <% } %>


</ul>
