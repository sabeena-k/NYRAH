<div class="container mt-5">
  <h3 class="text-center mb-4 fw-bold">EXPLORE</h3>

  <div class="row g-4">
    <% if (categories && categories.length > 0) { %>
      <% categories.forEach(cat => { %>

        <div class="col-6 col-md-3">
          <a href="/ALLCategories" class="text-decoration-none">
            <div class="category-card text-center">
              <div class="category-img-wrapper">
                <% if (cat.image) { %>
                  <img 
                    src="/uploads/categoryImages/<%= cat.image %>" 
                    alt="<%= cat.name %>" 
                    class="img-fluid"
                  >
                <% } else { %>
                  <img src="/images/no-image.png" class="img-fluid">
                <% } %>
              </div>

              <h6 class="mt-3 fw-bold text-dark">
                <%= cat.name %>
              </h6>
            </div>
          </a>
        </div>

      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <p>No categories available</p>
      </div>
    <% } %>
  </div>
</div>


<div class="container mt-5">
  <h3 class="fw-bold text-center mb-4">NEW COLLECTIONS</h3>

  <div class="row g-4">
   <% if (newCollections && newCollections.length > 0) { %>
  <% newCollections.forEach(product => { %>
        <div class="col-6 col-md-3">
          <div class="card product-card h-100">
            <img
              src="/uploads/productImages/<%= product.productImage[0] %>"
              class="card-img-top"
              alt="<%= product.productName %>"
            >
            <div class="card-body text-center">
              <h6 class="mb-1"><%= product.productName %></h6>
              <p class="fw-bold mb-2">â‚¹ <%= product.salesPrice %></p>
              <a href="/product/<%= product._id %>" class="btn btn-sm btn-dark">
                View
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <p>No products available</p>
      </div>
    <% } %>
  </div>
</div>

<div class="middle my-5 text-center">
  <img src="/images/top.webp" class="img-fluid" alt="Banner">
</div>
