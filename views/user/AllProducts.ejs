<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NYRAH</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/user/home.css">
<link rel="stylesheet" href="/user/product.css">

</head>

<body>
<header>
<nav class="navbar navbar-expand-lg navbar-light bg-light py-3 shadow-sm fixed-top">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">NYRAH</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-4">
        <li class="nav-item"><a href="/" class="nav-link text-dark">Home</a></li>
        <li class="nav-item"><a href="#" class="nav-link text-dark">New Arrivals</a></li>
        <li class="nav-item"><a href="#" class="nav-link text-dark">Categories</a></li>
        <li class="nav-item"><a href="/AllProducts" class="nav-link text-dark">All Products</a></li>
      </ul>
      <div class="d-flex align-items-center gap-3">
        <a href="#" class="text-dark"><i class="bi bi-search fs-5"></i></a>
        <a href="#" class="text-dark"><i class="bi bi-heart fs-5"></i></a>
        <a href="#" class="text-dark"><i class="bi bi-cart fs-5"></i></a>
        <a href="/logout" class="btn btn-danger btn-sm text-light">Logout</a>
      </div>
    </div>
  </div>
</nav>
</header>

<div class="container mt-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="filter-box">
        <h6 class="filter-title">FILTER & SORT</h6>
        <div class="filter-item"><span>Sort By</span><i class="bi bi-chevron-down"></i></div>
        <div class="filter-item"><span>Size</span><i class="bi bi-chevron-down"></i></div>
        <div class="filter-item"><span>Color</span><i class="bi bi-chevron-down"></i></div>
        <div class="filter-item"><span>Price</span><i class="bi bi-chevron-down"></i></div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row g-4">
        <% products.forEach(product => { %>
          <div class="col-md-4">
            <div class="card" onclick="window.location.href='/product/<%= product._id %>'">
              <img 
  src="/uploads/productImages/<%= 
        product.images && product.images.length > 0 
        ? product.images[0] 
        : 'no-image.jpg' 
    %>" 
  class="card-img-top" 
  alt="<%= product.name %>"
>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text">$<%= product.price %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Pagination -->
      <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
          <% if(currentPage > 1){ %>
            <li class="page-item">
              <a class="page-link" href="/AllProducts?page=<%= currentPage - 1 %>">«</a>
            </li>
          <% } else { %>
            <li class="page-item disabled"><a class="page-link">«</a></li>
          <% } %>

          <% for(let i=1; i<=totalPages; i++){ %>
            <li class="page-item <%= i===currentPage?'active':'' %>">
              <a class="page-link" href="/AllProducts?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>

          <% if(currentPage < totalPages){ %>
            <li class="page-item">
              <a class="page-link" href="/AllProducts?page=<%= currentPage + 1 %>">»</a>
            </li>
          <% } else { %>
            <li class="page-item disabled"><a class="page-link">»</a></li>
          <% } %>
        </ul>
      </nav>

    </div>
  </div>
</div>

<!-- Footer -->
<footer class="mt-5 bg-light py-4">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h3 class="footer-title">NYRAH</h3>
        <p>Little styles, Big smiles</p>
      </div>
      <div class="col-md-3 footer-section">
        <h6>Contact Us</h6>
        <p>Calicut, Kerala</p>
        <p>nyrah@gmail.com</p>
      </div>
      <div class="col-md-3 footer-section">
        <h6>Policies</h6>
        <a href="#"style='font-decoration:none'>Privacy Policy</a><br>
        <a href="#">Terms & Conditions</a><br>
        <a href="#">Return Policy</a>
      </div>
      <div class="col-md-3 footer-section">
        <h6>Connect with us</h6>
        <p>Instagram | Facebook | Twitter</p>
      </div>
    </div>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>