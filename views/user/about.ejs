<style>
  
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Georgia', serif;
    }

    :root {
        --bg-color: #FDE0D0;
        --footer-bg: #F8CFC1;
        --primary-color: #D43C3C;
        --text-color: #4B4B4B;
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-color);
        line-height: 1.6;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 50px;
        background-color: var(--bg-color);
    }

    .navbar .logo {
        font-weight: bold;
        font-size: 24px;
        color: var(--primary-color);
    }

    .navbar ul {
        list-style: none;
        display: flex;
        gap: 25px;
    }

    .navbar ul li {
        display: inline;
    }

    .navbar ul li a {
        text-decoration: none;
        color: var(--text-color);
        font-weight: 500;
    }

    .navbar .btn {
        padding: 8px 20px;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .about-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        padding: 50px;
        gap: 50px;
    }

    .about-container img {
        max-width: 400px;
        width: 100%;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .about-text {
        max-width: 600px;
    }

    .about-text h2 {
        font-size: 32px;
        margin-bottom: 20px;
        color: #4B4B4B;
        font-family: 'Georgia', serif;
    }

    .about-text p {
        font-size: 18px;
        color: #4B4B4B;
    }

    footer {
        background-color: var(--footer-bg);
        padding: 30px 50px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        font-size: 14px;
    }

    .footer-section {
        flex: 1;
        min-width: 150px;
    }

    .footer-section h3 {
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .footer-section p, .footer-section a {
        color: #333;
        text-decoration: none;
        display: block;
        margin-bottom: 5px;
    }

    .footer-socials img{
        
    width: 28px;
    height: 28px;
    cursor: pointer;
}
    

    .footer-bottom {
        text-align: center;
        width: 100%;
        margin-top: 20px;
        font-size: 12px;
        color: #555;
    }

    @media (max-width: 900px) {
        .about-container {
            flex-direction: column;
            text-align: center;
        }

        .about-text {
            max-width: 100%;
        }
    }
</style>
