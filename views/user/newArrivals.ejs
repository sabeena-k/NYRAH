<%- include("../partials/user/header") %>

<h2>New Arrivals</h2>

<div class="product-grid">
  <% products.forEach(product => { %>
    <div class="product-card">
      <img src="/uploads/productImages/<%= product.productImage?.[0] || 'no-image.jpg' %>"
      <h4><%= product.productName %></h4>
      <p>â‚¹<%= product.price %></p>
      <a href="/product/<%= product._id %>">View Details</a>
    </div>
  <% }) %>
</div>

<style>
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
}

.product-card {
  border: 1px solid #ccc;
  padding: 15px;
  text-align: center;
  border-radius: 8px;
}

.product-card img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-radius: 8px;
}
</style>
