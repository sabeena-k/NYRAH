
<style>
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .category-card {
    border: 1px solid #ccc;
    padding: 15px;
    text-align: center;
    border-radius: 8px;
    margin-top: 20px;
  }

  .category-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 8px;
  }
</style>

<%- include("../../views/partials/user/header") %>
<br><br>
<h2>All Categories</h2>

<div class="category-grid">
  <% categories.forEach(cat => { %>
    <div class="category-card">
      <img src="/uploads/categoryImages/<%= cat.image %>">
      <h4><%= cat.name %></h4>
      <a href="/AllProducts?category=<%= cat._id %>">View Products</a>
    </div>
  <% }) %>
</div>