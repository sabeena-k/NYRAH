<!DOCTYPE html>
<html lang="ml">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NYRAH Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    /* ----------- Reset & Base ------------ */
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif; }
    body { background: #f6f7fb; display: flex; min-height: 100vh; }

    /* ----------- Sidebar ------------ */
    .sidebar {
      width: 240px;
      background: #fff;
      padding: 20px 15px;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }
    .sidebar .brand { font-size: 1.8rem; font-weight: bold; margin-bottom: 2rem; }
    .sidebar ul { list-style: none; }
    .sidebar ul li { margin-bottom: 1rem; }
    .sidebar ul li a {
      text-decoration: none; color: #333; display: flex; align-items: center; gap: 10px;
      padding: 8px 5px; border-radius: 5px;
    }
    .sidebar ul li a:hover, .sidebar ul li.active a { background: #f0f0f0; }

    /* ----------- Main Content ------------ */
    .main {
      flex: 1;
      padding: 20px;
    }
    .main-profile-btn {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      position: relative;
      margin-bottom: 20px;
    }
    .main-profile-btn img.profile-img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }
    .profile-menu {
      display: none;
      position: absolute;
      top: 50px;
      right: 0;
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 5px;
      overflow: hidden;
      min-width: 120px;
      z-index: 10;
    }
    .profile-menu a {
      display: block;
      padding: 8px 12px;
      text-decoration: none;
      color: #333;
    }
    .profile-menu a:hover { background: #f0f0f0; }

    /* ----------- Table ------------ */
    .table-container { width: 100%; overflow-x: auto; }
    table { width: 100%; border-collapse: collapse; min-width: 600px; }
    th, td { padding: 8px 12px; border: 1px solid #ddd; text-align: left; }
    thead { background: #f8f0f0; }

    /* ----------- Responsive ------------ */
    @media screen and (max-width: 480px) {
      table, thead, tbody, th, td, tr { display: block; }
      thead tr { position: absolute; top: -9999px; left: -9999px; }
      tr { margin-bottom: 1rem; border: 1px solid #ccc; padding: 0.5rem; }
      td { border: none; border-bottom: 1px solid #eee; position: relative; padding-left: 50%; }
      td::before {
        position: absolute;
        top: 0.6rem;
        left: 0.6rem;
        width: 45%;
        white-space: nowrap;
        font-weight: bold;
        content: attr(data-label);
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <aside class="sidebar">
    <h1 class="brand">NYRAH</h1>
    <ul class="menu">
      <li class="active"><a href="#"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
      <li><a href="#"><i class="bi bi-bag"></i> Order</a></li>
      <li><a href="/admin/products"><i class="bi bi-box-seam"></i> Products</a></li>
      <li><a href="#"><i class="bi bi-graph-up"></i> Sales report</a></li>
      <li><a href="/admin/customers"><i class="bi bi-people"></i> Customer</a></li>
      <li><a href="/admin/category"><i class="bi bi-tags"></i> Category</a></li>
      <li><a href="#"><i class="bi bi-percent"></i> Coupon</a></li>
      <li><a href="#"><i class="bi bi-arrow-repeat"></i> Refund</a></li>
      <li><a href="#"><i class="bi bi-image"></i> Banners</a></li>
      <li><a href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Sign Out</a></li>
    </ul>
  </aside>

  <!-- Main -->
  <main class="main">
    <!-- Profile -->
    <div class="main-profile-btn" id="profileBtn">
      <img src="/images/ima.webp" alt="Admin" class="profile-img">
      <span class="profile-name">Admin</span>
      <div class="profile-menu" id="profileMenu">
        <a href="#">Profile</a>
        <a href="/admin/logout">Logout</a>
      </div>
    </div>

    <!-- Table -->
   <h1>Products</h1>

<a href="/admin/products/add">Add Product</a>

<table border="1" cellpadding="10">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Actions</th>
    </tr>

    <% products.forEach(p => { %>
        <tr>
            <td><%= p.name %></td>
            <td>â‚¹<%= p.price %></td>
            <td><%= p.category?.name %></td>
            <td><%= p.brand?.brandName %></td>
            <td>
                <a href="/admin/products/edit/<%= p._id %>">Edit</a>

                <form action="/admin/products/delete/<%= p._id %>" method="POST" style="display:inline;">
                    <button onclick="return confirm('Delete this product?')">Delete</button>
                </form>
            </td>
        </tr>
    <% }) %>
</table>

  <script>
    // Profile dropdown toggle
    const profileBtn = document.getElementById('profileBtn');
    const profileMenu = document.getElementById('profileMenu');
    profileBtn.addEventListener('click', () => {
      profileMenu.style.display = profileMenu.style.display === 'block' ? 'none' : 'block';
    });
    window.addEventListener('click', (e) => {
      if (!profileBtn.contains(e.target)) profileMenu.style.display = 'none';
    });
  </script>
</body>
</html>
